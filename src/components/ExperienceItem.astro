---
interface Props {
  date:string,
  title:string,
  description:string,
  link?:string,
};
const { date, title, description, link } = Astro.props;
---

<div class="absolute w-3 h-3 md:w-3.5 md:h-3.5 bg-gray-200 rounded-sm mt-1.5 md:mt-1 -start-1.5 md:-start-2"></div>
<time class="text-xs md:text-sm lg:text-base font-normal leading-none text-green-200/80">{date}</time>
<h3 class="text-sm md:text-base lg:text-lg font-semibold text-blue-400/90 mt-2 mb-1">{title}</h3>
<p class="mb-4 text-xs md:text-sm lg:text-base text-pretty font-normal text-gray-200">{description}</p>
