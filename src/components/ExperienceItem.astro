---
interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/40 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-5 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-sky-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >
      <h3 class="text-xl font-bold text-sky-400">{title}</h3>
      <h4 class="font-semibold text-xl">{company}</h4>
      <time class="p-0 m-0 text-sm text-white/80">{date}</time>
    </div>
  </div>
  <p class="relative flex flex-col gap-2 pb-4 text-white/60 md:col-span-3">{description}</p>
</div>